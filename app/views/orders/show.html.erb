<h1>注文履歴詳細</h1>
  <div class="col-xs-8">
      <h2>注文情報</h2>
   <table class="table table-inverse">
      <tr class="">
          <th class="td-id">注文日</th>
          <td class="td-name"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr class="">
          <th class="td-id">配送先</th>
          <td class="td-name"><%= @order.postal_code %><br><%= @order.name_address %><br><%= @order.address %></td>
      </tr>
      <tr class="">
          <th class="td-id">支払い方法</th>
          <td class="td-name"><%= @order.payment_method %></td>
      </tr>
      <tr class="">
          <th class="td-id">ステータス</th>
          <td class="td-name"><%= @order.status %></td>
      </tr>
    </table>
  </div>
  <div class="col-xs-4">
      <h2>請求情報</h2>
    <table class="table table-inverse">
      <tr class="">
          <th class="td-id">商品合計</th>
          <td class="td-name"><%= @order.order_total_volume %></td>
      </tr>
      <tr class="">
          <th class="td-id">配送料</th>
          <td class="td-name"><%= @order.postage %></td>
      </tr>
      <tr class="">
          <th class="td-charge">ご請求額</th>
          <td class="td-name"><%= @order.charge %></td>
      </tr>
    </table>
  </div>
  <div class="col-xs-10">
      <h2>注文内容</h2>
      <table class="table table-inverse">
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.post_tax_price.to_i %></td>
          <td><%= order_item.volume %></td>
          <td><%= order_item.item.post_tax_price.to_i*order_item.volume %></td>
        <% end %>
        </tr>
      </tbody>
      </table>
  </div>