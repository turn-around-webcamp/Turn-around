<%= render 'items/category', categories: @categories %>
  <div class="col-xs-9 col-xs-offset-1">
    <p><%= "全#{Item.count}件" %></p>
    <% @items.each do |item| %>
        <div class="image item-image col-xs-3">
        <%= attachment_image_tag item, :image, :size => '200x200' %>
            <div class="caption">
            <h3><%= link_to item.name, item, class: "item_#{item.id}" %></h3>
            <p class="price-tag"><%= "¥#{item.non_tax_price}" %></p>
            </div>
        </div>
    <% end %>
  </div>
  <div class="col-sx-12" class="text-center">
    <%= paginate @items %>
  </div>