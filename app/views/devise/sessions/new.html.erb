<h3 class="session-message">会員の方はこちらからログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="session-field">
    <table>
      <tr>
        <th><%= f.label :メールアドレス %></th>
        <td> <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "60*60" %></td>
      </tr>

      <tr>
        <th><%= f.label :パスワード %></th>
        <td> <%= f.password_field :password, autocomplete: "current-password", :size => "60*60" %></td>
      </tr>
    </table>

    <div class="col-xs-offset-4 col-xs-8">
      <%= link_to "=>パスワードを忘れた方はこちら",new_user_password_path %>
    </div>
  </div>

  <div class="actions, col-xs-offset-5 col-xs-7">
    <br><button class="btn btn-primary btn-lg" type="submit">ログイン</button>
  </div>
<% end %>

<h3 class="registration-message">登録がお済ではない方</h3>
<div class="col-xs-offset-3 col-xs-9">
  <%= link_to "こちら",new_user_registration_path %> から新規登録を行ってください。
</div>