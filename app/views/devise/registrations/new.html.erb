<h3>新規会員登録</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <table>
        <tr>
          <th><%= f.label :名前 %></th>
          <th>（性）</th>
          <td><%= f.text_field :last_name_japanese %></td>
          <th>（名）</th>
          <td><%= f.text_field :first_name_japanese %></td>
        </tr>

        <tr>
          <th><%= f.label :フリガナ %></th>
          <th>（セイ）</th>
          <td><%= f.text_field :last_name_katakana %></td>
          <th>（メイ）</th>
          <td><%= f.text_field :first_name_katakana %></td>
        </tr>

        <tr>
          <th><%= f.label :メールアドレス %></th>
          <th></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <t><%= f.label :郵便番号（ハイフンなし）%></td>
          <td><%= f.text_field :postal_code %></td>
        </tr>

        <tr>
          <td><%= f.label :住所 %></td>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <td><%= f.label :電話番号（ハイフンなし）%></td>
          <td><%= f.text_field :tel %></td>
        </tr>

        <tr>
          <td><%= f.label :パスワード（６文字以上）%></td>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        </tr>

        <tr>
          <td><%= f.label :パスワード（確認用） %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>
    </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %>

<h3>既に登録済みの方</h3>
<%= link_to "こちら",new_user_session_path %> からログインしてください。
