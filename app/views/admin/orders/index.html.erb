<h2>注文一覧画面</h2>
    <div class="col-xs-12">
        <table class="table">
            <thead>
                <tr class="active">
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td class="under"><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %></td>
                    <td><%= order.user.full_name_japanese %></td>
                    <td><%= order.order_total_volume %></td>
                    <td><%= order.status %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<div class="col-xs-12">
    <%= paginate @orders %>
</div>
