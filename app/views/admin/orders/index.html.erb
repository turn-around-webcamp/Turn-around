<h1>注文一覧画面</h1>
    <div class="col-xs-10">
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>購入日時</th>
                    <th>購入者</th>
                    <th>注文個数</th>
                    <th>注文ステータス</th>
                </tr>
            </thead>

            <tbody>
                <% @orders.each do |order| %>
                <tr>
                    <td><%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order) %>
                        <!--会員userの注文orderの購入日時created_at　リンクで詳細画面に遷移する-->
                    </td>
                    <td><%= order.user.full_name_japanese %></td>

                    <td><%= order.order_total_volume %></td>
                    <td><%= order.status %></td>
                    <%# order.rbでenum定義されている %>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<div class="col-xs-12">
    <%= paginate @orders %>
</div>
