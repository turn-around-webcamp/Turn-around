<div class="row">
  <h2>商品一覧画面</h2>
  <div class="col-xs-10">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜き価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr><!--中身-->
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.non_tax_price %></td>
          <td><%= item.category.name %></td>
          <td><%= item.status ? "販売中" : "販売停止中" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>