<div class="row">
  <h1>商品　詳細画面</h1>
  <div class="col-xs-4">
    <p>画像</p>
    <p>画像選択ボタン</p>
  </div>
  <div class="col-xs-4">
    <table>
        <tr>
          <th>商品名</th>
          <td><%#= f.text_field :name, class: "" %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%#= f.text_area :text, class: "" %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.category.name %></td>
        </tr>
        <tr>
          <th>税抜き価格</th>
          <td><%#= f.text_field :name, class: "" %></td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.status == true %>
              販売停止
            <% else %>
              販売中
            <% end %>
          </td>
        </tr>
    </table>
  </div>
  <div class="col-xs-4">
    <%= link_to "編集する" , edit_admin_item_path(@item.id) %>
  </div>
</div>