	    <h3>ジャンル追加・一覧画面</h3>
        <%= form_with(model: @category, url: admin_categories_path(@category), local: true) do |f| %>
			<div class="field">
			    <%= f.label :ジャンル %>
			    <%= f.text_field :name %>
			    <%= f.radio_button :status, :有効 %> 有効
				<%= f.radio_button :status, :無効 %> 無効
		        <button class="btn btn-info" type="submit">追加</button>
			</div>

			<div class="col-xs-4">
			    <table class="table table-hover table-inverse">
					<thead>
					    <tr>
					        <th>ジャンル</th>
					        <th>状態</th>
					        <th></th>
					    </tr>
					</thead>

                    <% @categories.each do |category| %>
					<tbody>
					    <tr>
					        <td><%= category.name %></td>
					        <td><%= category.status %></td>
					        <td><%= link_to "編集する", edit_admin_category_path(category), class: "btn btn-primary btn-sm edit_admin_category_#{category.id}" %></td>
					        <% end %>
					    </tr>
					</tbody>
			    </table>
			</div>
		<% end %>