<div class="container">
	<div class="row">

	    <h3>ジャンル編集画面</h3>
        <%= form_with model: @category, url: admin_category_path(@category), local: true do |f| %>
			<div class="field">
			    <%= f.label :ジャンル %>
			    <%= f.text_field :name %>
			    <%= f.radio_button :status, "有効" %> 有効
				<%= f.radio_button :status, "無効" %> 無効
		        <button class="btn btn-info" type="submit">変更を保存する</button>
			</div>
		<% end %>
	</div>
</div>