<h2>配送先編集</h2>
<div class="col-xs-12 ">
    <%= form_for(@deliver) do |f| %>
        <table>
            <tr>
                <td><%= f.label :郵便番号（ハイフンなし） %></td>
                <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <td><%= f.label :住所 %></td>
            <td> <%= f.text_area :address %></td>
            </tr>
            <tr>
                <td><%= f.label :宛名 %></td>
                <td><%= f.text_field :name_address %></td>
                <td><%= f.submit "編集する", class: "btn btn-primary"%></td>
            </tr>
        </table>
    <% end %>
</div>