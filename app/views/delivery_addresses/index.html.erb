<h2>配送先登録/一覧</h2>
<!-- 配送先登録 -->
<%= form_for(@deliver) do |f| %>
<div class="field row">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
</div>

<div class="field row">
    <%= f.label :住所 %>
    <%= f.text_field :address %>
</div>
<div class="field row">
    <%= f.label :宛名 %>
    <%= f.text_field :name_address %>
</div>

<div class="actions row">
    <%= f.submit "登録する" %>
</div>
<% end %>


<!-- 配送先一覧 -->
<table>
    <thead>
        <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
        </tr>
    </thead>
    <% @delivers.each do |deliver| %>
    <tbody>
        <tr>
            <td><%= deliver.postal_code %></td>
            <td><%= deliver.address %></td>
            <td><%= deliver.name_address %></td>
            <% if @user.id == current_user.id %>
            <%# これを入れないとidがないと言われUrlGenerationErrorが出る? %>
            <td><%= link_to "編集する", edit_delivery_address_path(deliver), class: "btn-sm btn-success edit_delivery_address_#{deliver.id}" %></td>
            <td><%= link_to "削除する", deliver, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_delivery_address_#{deliver.id}" %></td>
            <%# 削除まだできない %>
            <% end %>
        </tr>
    </tbody>
</table>
<% end%>