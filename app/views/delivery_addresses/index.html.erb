<h2>配送先登録/一覧</h2>
<!-- 配送先登録 -->


<div class="col-xs-12 ">
    <%= form_for(@deliver) do |f| %>
        <table>
            <tr>
                <td><%= f.label :郵便番号（ハイフンなし） %></td>
                <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
                <td><%= f.label :住所 %></td>
            <td> <%= f.text_area :address %></td>
            </tr>
            <tr>
                <td><%= f.label :宛名 %></td>
                <td><%= f.text_field :name_address %></td>
                <td><%= f.submit "登録する", class: "btn btn-primary"%></td>
            </tr>
        </table>
    <% end %>
</div>

<!-- 配送先一覧 -->
<div class="col-xs-12">
    <table class="table table-bordered">
        <thead>
            <tr class="active">
                <th class="active col-xs-1">郵便番号</th>
                <th class="active col-xs-6">住所</th>
                <th class="active col-xs-2">宛名</th>
                <th class="active col-xs-3"></th>
            </tr>
        </thead>
        <% @delivers.each do |deliver| %>
        <tbody>
            <tr>
                <td><%= deliver.postal_code %></td>
                <td><%= deliver.address %></td>
                <td><%= deliver.name_address %></td>
            <% if @user.id == current_user.id %>
                <td class="text-center">
                <%= link_to "編集する", edit_delivery_address_path(deliver), class: "btn-sm btn-success edit_delivery_address_#{deliver.id}" %>
                <%= link_to "削除する", deliver, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_delivery_address_#{deliver.id}" %>
                </td>
            <% end %>
            </tr>
        </tbody>
    <% end%>
    </table>
</div>
