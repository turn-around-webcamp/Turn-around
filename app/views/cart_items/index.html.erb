<div class="row">
  <div class="col-xs-8">
<h1>ショッピングカート</h1>
<p><%= link_to "カートを空にする", cart_items_path, method: :delete %></p>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%#= attachment_image_tag(cart_item.item, :image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
            <%= cart_item.item.name %>
          </td>
          <td><%= cart_item.item.post_tax_price %></td>

          <%= form_for(@cart_item) do |f| %>
            <td><%= cart_item.total_volume %></td>
            <div class="actions">
              <%= f.submit '変更'%>
            </div>
          <% end %>

          <td><%= cart_item.item.post_tax_price*cart_item.total_volume %></td>
          <td><%= link_to "削除する", cart_items_path, method: :delete %></td>
          <% end %>
      </tbody>
    </table>
    <p><%= link_to "買い物を続ける", items_path %></p>
    <p>合計金額</p>
    <p><%= current_user.total_price %></p>
    <h1><%= link_to "情報入力に進む", new_order_path, method: :post %></h1>
  </div>
</div>